/* pages/detail/detail.wxss */
.detailCont{
  display:flex;
  flex-direction:column;
}
.detailMsg{
  flex-direction:row;
  margin-left:30rpx;
  margin-top:20rpx;
}
.musicbg{
  width:100%;
  position:relative;
  height:460rpx;
}
.bg{
  width:100%;
  height:460rpx
}
.music{
  width:100rpx;
  height:100rpx;
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  opacity: 0.6;
}
.avatar{
  width:74rpx;
  height:74rpx;
  vertical-align:middle;
}
.fabiao{
  vertical-align:middle;
}
.name{
 vertical-align:middle;
 font-size:30rpx;
 font-weight:300;
 margin-left:20rpx;
 color:#666;
}
.time{
 vertical-align:middle;
 font-size:24rpx;
 margin-left:30rpx;
 color:#999;
}
.title{
  font-weight:700;
  font-size:40rpx;
  margin:15rpx 20rpx 50rpx 20rpx;
  letter-spacing: 2px;
  color:#4b556c;
}
.shou{
  width:720rpx;
  margin:0 auto;
  height:90rpx;
  border-top:1px solid #ccc;
  display:flex;
  justify-content:flex-end;
}
.shou image{
  width:90rpx;
  height:90rpx;
  margin-right:20rpx;
  margin-top:-45rpx;
}
.detailPage{
    padding-top:5rpx;
    margin:0  20rpx 20rpx 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
    color:#666;
    font-size:24rpx;
}